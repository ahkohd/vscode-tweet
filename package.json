{
	"name": "vscode-tweet",
	"displayName": "vscode-tweet",
	"description": "Extension that allows you to use twitter in vscode",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.31.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.vscodeTweet",
		"onView:twitterTimeline"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.vscodeTweet",
				"title": "Twitter"
			},
			{
				"command": "postTweets.tweet",
				"title": "Tweet",
				"icon": {
				  "light": "resources/light/tweet.svg",
				  "dark": "resources/dark/tweet.svg"
				}
			  },
			  {
				"command": "twitterTimeline.refresh",
				"title": "Refresh",
				"icon": {
				  "light": "resources/light/refresh.svg",
				  "dark": "resources/dark/refresh.svg"
				}
			  }
		],

		"viewsContainers": {
            "activitybar": [
                {
                    "id": "vscodeTweet",
                    "title": "Vscode Tweet",
					"icon": "resources/icon.svg"
                }
            ]
		},
		"views": {
            "vscodeTweet": [
				{
                    "id": "postTweets",
                    "name": "What's happening?"
                },
                {
                    "id": "twitterTimeline",
					"name": "Recent Tweets"
                },
                {
                    "id": "searchTweets",
                    "name": "Search"
                }
            ]
		},
		"menus": {
			"view/title": [
				{
				  "command": "twitterTimeline.refresh",
				  "group": "navigation",
				  "when":"view == twitterTimeline"
				},
				{
				  "command": "postTweets.tweet",
				  "group": "navigation",
				  "when":"view == postTweets"
				}
			  ]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"tslint": "^5.12.1",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42"
	}
}
